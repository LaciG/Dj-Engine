{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile file",
            "type": "shell",
            "command": "/bin/g++",
            "args": [
                "-Wall",
                "-I/usr/include",
                "-Iinclude",
                "-c",
                "${file}",
                "-o",
                "${workspaceFolder}/obj/${fileBasenameNoExtension}.o"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "Build",
            "command": "/bin/g++",
            "args": [
                "-L/usr/lib",
                "-o",
                "${workspaceFolder}/Dj-Engine",
                "${workspaceFolder}/obj/main.o",
                "${workspaceFolder}/obj/Generator.o",
                "${workspaceFolder}/obj/Note.o",
                "${workspaceFolder}/obj/Player.o",
                "${workspaceFolder}/obj/Rendr.o",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-lOpenGL"
            ],
            "dependsOn": [
                "Compile file"
            ],
            "options": {
                "cwd": "/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}